<h2 class="text-center">Available Packages</h2>

<%# To display 3 packages in columns per row %>
<% @packages.each_slice(3) do |packages| %>
<div class="row">
  <%# To get a package in a column %>
  <% packages.each do |package| %>
  <div class="col-md-4">
    <%= link_to package.name, package_path(package) %>
    <p>Price: <%= number_to_currency package.price, unit: "â‚±" %></p>
    <% package.places.each do |place| %>
      <%= cl_image_tag(place.image, class: "img-thumbnail") if place.image.present? %>
    <% end %>
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Non, magni, sit?</p>
  </div>
  <% end %>
</div>
<% end %>
