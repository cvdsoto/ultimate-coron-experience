<%= form_for @package do |f| %>
  <fieldset class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :required => true, :autofocus => true, :class => 'form-control'  %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, :class => 'form-control' %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :time %>
    <%= f.select :time , ["Morning", "Afternoon"] %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.collection_check_boxes :place_ids, Place.where(["package_id IS NULL or package_id = ?", @package.id]), :id, :name  do |b| %>
    <div class="custom-control custom-checkbox">
      <%= b.check_box %>
      <%= b.label %>
    </div>
    <% end %>
  </fieldset>

  <%= f.submit 'Add Tour', :class =>'btn btn-primary' %>
<% end %>
