<h2 class="text-center">Places to Explore in Coron</h2>

<%# To display 3 places in columns per row %>
<% @places.each_slice(3) do |places| %>
<div class="row">
  <%# To get a place in a column %>
  <% places.each do |place| %>
  <div class="col-md-4">
    <%= link_to place.name, place_path(place) %>
    <p>Included in our <%= link_to place.package.name, package_path(place.package) if place.package.present? %></p>
    <%= cl_image_tag(place.image, class: "img-thumbnail") if place.image.present? %>
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Non, magni, sit?</p>
  </div>
  <% end %>
</div>
<% end %>
