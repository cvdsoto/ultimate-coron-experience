<h2 class="text-center"><%= @place.name %></h2>
<% if @current_user.present? %>
  <%= link_to "Edit Place", edit_place_path if @current_user.admin? %>
  <%= button_to "Delete Place", @place, :method => 'delete', :data => { :confirm => "Are you sure?"} if @current_user.admin? %>
<% end %>
<ul class="list-inline text-center">
  <li class="list-inline-item">Included in <%= link_to @place.package.name, package_path(@place.package) if @place.package.present? %></li>
  <li class="list-inline-item">Location: <%= @place.location %></li>
  <li class="list-inline-item">Image: <%= cl_image_tag(@place.image) if @place.image.present?%></li>   <!-- #remove from list -->
</ul>
