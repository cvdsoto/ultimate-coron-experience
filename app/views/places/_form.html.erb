<%= form_for(@place, :html => {:multipart => true}) do |f| %>
<fieldset class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, :required => true, :autofocus => true, :class => 'form-control' %>
</fieldset>
<fieldset class="form-group">
  <%= f.label :location %>
  <%= f.text_field :location, :class => 'form-control' %>
</fieldset>
<fieldset class="form-group">
  <%= f.collection_radio_buttons :package_id, Package.all, :id, :name  do |b| %>
  <div class="form-check">
    <%= b.radio_button %>
    <%= b.label %>
  </div>
  <% end %>
</fieldset>
<fieldset class="form-group">
  <%= f.label :image %>
  <%= f.cl_image_upload :image, :class => 'form-control' %>
</fieldset>
  <%= f.submit nil, :class => 'btn btn-primary' %>
<% end %>
